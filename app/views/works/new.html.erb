<div class="container mt-5">
    <h1>Nuevo proyecto</h1>
    <%= form_with(model: @work, local: true) do |f| %>
    <div class="form-group">
        <%= f.label :name  %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <h3>Trabajadores</h3>
        <% @workers.each do |w| %>
            <%= f.label :workers, w.name %>
            <%= f.check_box :workers %>
            <br>
        <% end %>
    </div>
    <div class="form-group">
        <%= f.label :initial_date, 'Fecha inicio' %>
        <%= f.date_field :initial_date, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :finish_date,'Fecha tÃ©rmino' %>
        <%= f.date_field :finish_date, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.select :status, Work.statuses.keys, class:'custom-select', prompt: 'Seleccione una opcion...' %>
    </div>
    <div class="form-group">
        <%= f.submit "Enviar", class:"btn btn-primary" %>
    </div>
<% end %>

</div>
